class Solution {
public:
    vector<int> finalPrices(vector<int>& prices) {
        
        int n = prices.size();
        vector<int> result(n);
        stack <int> st;

        for(int i = n - 1; i >= 0; i--){
            int current = prices[i];
            
            while(!st.empty() && st.top() > current){
                st.pop();
            }
            if(st.empty()){
                result[i] = current;
            }
            else{
                result[i] = current - st.top();
            }
            st.push(current);
        }         
        return result;
    }
};
