class Solution {
public:
    vector<int> nextGreaterElement(vector<int>& nums1, vector<int>& nums2) {
        unordered_map<int, int> mp;
        stack<int> st;

        for(int i = nums2.size() - 1; i>=0; i--){
            int current = nums2[i];

            while(!st.empty() && st.top() <= current){
                st.pop();
            }
            if(st.empty()){
                mp[current] = -1;
            }
            else{
                mp[current] = st.top();
            }
            st.push(current);           
        }
        vector <int> result;
        for(int x : nums1){
            result.push_back(mp[x]);
        }
        return result;
        
    }
};
