1. C++ Code

class Solution {
public:
    int firstBadVersion(int n) {
        int low = 1, high = n;

        while (low < high) {
            int mid = low + (high - low) / 2;  

            if (isBadVersion(mid)) {
                high = mid;
            } else { 
                low = mid + 1;
            }
        }
        return low;
    }
};


2. Java Code

public class Solution extends VersionControl {
    public int firstBadVersion(int n) {
        int left = 1, right = n;
        
        while (left < right) {
            int mid = left + ((right - left) >>> 1);
            
            if (isBadVersion(mid)) {
                right = mid;
            } else {
                left = mid + 1; 
            }
        }        
        return left; 
    }
}
